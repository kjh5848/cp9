{
  "project": {
    "name": "CP9 Backend - Supabase Edge Functions",
    "type": "supabase-edge-functions",
    "description": "AI-powered workflow automation backend for Coupang Partners Auto-Blog SaaS"
  },
  "runtime": {
    "platform": "deno",
    "version": "1.40+",
    "package_manager": "supabase-cli"
  },
  "development": {
    "localServer": "http://localhost:54321",
    "functionsPath": "/functions/v1/",
    "defaultHeaders": {
      "Content-Type": "application/json",
      "Authorization": "Bearer {SUPABASE_ANON_KEY}"
    }
  },
  "testing": {
    "framework": "deno-test",
    "coverage": {
      "enabled": false,
      "threshold": 70
    }
  },
  "codeStyle": {
    "indentation": 2,
    "quotes": "double",
    "semicolons": true,
    "lineLength": 100,
    "trailingComma": "es5"
  },
  "aiAssistance": {
    "preferredPatterns": [
      "CORS handling for all Edge Functions",
      "Proper error handling with try-catch",
      "Environment variable access via Deno.env.get()",
      "TypeScript type definitions for all data structures",
      "Standardized response format"
    ],
    "avoidPatterns": [
      "Node.js specific imports",
      "npm packages (use esm.sh or skypack)",
      "Synchronous file operations",
      "Global state mutations"
    ]
  },
  "quickCommands": {
    "start": "supabase start",
    "stop": "supabase stop",
    "deploy": "supabase functions deploy",
    "logs": "supabase functions logs --tail",
    "migrate": "supabase db push",
    "reset": "supabase db reset"
  }
}